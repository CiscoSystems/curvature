<h1>Login</h1>

<%= form_tag do %>
  <div class="curvyform">
    <%= label_tag(:username, "Username:") %>
    <%= text_field_tag(:username) %>

    <%= label_tag(:password, "Password:") %>
    <%= text_field_tag(:password) %>

    <%= submit_tag("Login") %>
  </div>
<% end %>

<p>
Are you a new user? <a href="/signup"> Sign Up </a>
</p>
